<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net48</TargetFramework>
    <PlatformTarget>x64</PlatformTarget>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AssemblyTitle>NTGrpcClient</AssemblyTitle>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
    <AssemblyCompany>HedgeBot</AssemblyCompany>
    <AssemblyProduct>NTGrpcClient for NinjaTrader</AssemblyProduct>
    <AssemblyDescription>gRPC client library for NinjaTrader communication with Bridge Server</AssemblyDescription>
    <LangVersion>7.3</LangVersion>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <PrivateAssets>none</PrivateAssets>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Grpc.Core" Version="2.46.6" />
    <PackageReference Include="Google.Protobuf" Version="3.25.1" />
    <PackageReference Include="Grpc.Tools" Version="2.71.0" PrivateAssets="All" />
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>
  
  <ItemGroup>
    <Protobuf Include="proto\trading.proto" GrpcServices="Client" />
  </ItemGroup>
</Project>